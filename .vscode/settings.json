{
    "files.exclude": {
        "include": true,
        "node_modules": true,
        "**/package-lock.json": true,
        "**/package.json": true,
        "**/.*": false,
        "**/.gitignore": false,
        ".vscode/**": false,
        ".venv": true,
        "**/__pycache__": true
    },
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "python.analysis.typeCheckingMode": "basic",
    "[html]": {
        "editor.tabSize": 2,
        "editor.suggest.insertMode": "replace"
    },
    "[json]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace"
    },
    "rest-client.environmentVariables": {
        "local": {
            "host": "localhost",
        }
    }
}